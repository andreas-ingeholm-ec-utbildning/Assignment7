@{
    var image = ((dynamic)Model).Image;
    var title = ((dynamic)Model).Title;
    var url = ((dynamic)Model).Url;
    var description = ((dynamic)Model).Description;
    var category = ((dynamic)Model).Category;
    var day = ((dynamic)Model).Day;
    var month = ((dynamic)Model).Month;
}

<div class="article-item col pb-5">

    <a href="@url" class="text-decoration-none text-black">
        <div class="image" style="background-image: url(/image/stock/@image)">
            <div class="image-overlay d-flex">
                <div class="m-auto">
                    <h4 class="fw-bold">@day</h4>
                    <p>@month</p>
                </div>
            </div>
        </div>
    </a>

    <p class="mt-3 mb-2">@category</p>
    <a href="@url" class="text-decoration-none text-black">
        <h3>@title</h3>
    </a>
    <p class="mt-2">@description</p>

</div>
