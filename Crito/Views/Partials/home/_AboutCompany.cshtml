@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Umbraco.Cms.Core.Models
@using Umbraco.Cms.Core.Models.PublishedContent

@{

    var imageUrl = Model.Value<IPublishedContent>("aboutCompanyImage")?.MediaUrl() ?? "";
    var founderName = Model.Value<string>("aboutCompanyFounderName");
    var founderQuote = Model.Value<string>("aboutCompanyFounderQuote");
    var header = Model.Value<string>("aboutCompanyHeader");
    var description = Model.Value<string>("aboutCompanyDescription");
    var buttons = Model.Value<IEnumerable<Link>>("aboutCompanyButtons") ?? Enumerable.Empty<Link>();

}

<section class="container about-company mt-5 p-5">
    <div class="row mb-5 mt-5">

        <div class="col d-flex flex-column mt-5">
            <div class="image">
                <div class="image-overlay p-3">
                    <h6 class="fw-bold">@founderName, <i class="fst-normal text-danger">Founder</i></h6>
                    <p class="pt-2">"@founderQuote"</p>
                </div>
            </div>
        </div>

        <div class="col mx-5 ps-5 mt-5">

            <h5 class="text-danger">About Company</h5>
            <h1>@header</h1>

            <div class="my-5 text-pre">
                @description
            </div>

            <div class="d-flex flex-row">

                @foreach (var button in buttons)
                {
                    <a class="button-theme black" href="@button.Url">@button.Name <i class="fa-solid fa-arrow-up-right"></i></a>
                }

                <div class="ps-5 pt-2">
                    <a href="#" class="container row text-decoration-none text-nowrap flex-nowrap">
                        <div class="col-1 me-3">
                            <i class="fa-sharp fa-regular fa-circle-play"></i>
                        </div>
                        <div class="col pt-1">
                            <p> Intro Video</p>
                        </div>
                    </a>
                </div>

            </div>

        </div>

    </div>
</section>